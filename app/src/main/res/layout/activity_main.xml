<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <android.support.v7.widget.GridLayout
            android:layout_width="399dp"
            android:layout_height="308dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp" android:id="@+id/gridLayout3"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/timeText"
            android:layout_marginBottom="15dp" app:layout_constraintBottom_toTopOf="@+id/textView3">

        <ImageView
                android:layout_width="130dp"
                android:layout_height="100dp" app:srcCompat="@drawable/mickey" app:layout_row="0"
                app:layout_column="0" android:id="@+id/imageView" android:onClick="increaseScore"/>
        <ImageView
                android:layout_width="130dp"
                android:layout_height="100dp" app:srcCompat="@drawable/mickey" app:layout_row="0"
                app:layout_column="1" android:id="@+id/imageView1" android:onClick="increaseScore"/>
        <ImageView
                android:layout_width="130dp"
                android:layout_height="100dp" app:srcCompat="@drawable/mickey" app:layout_row="0"
                app:layout_column="2" android:id="@+id/imageView2" android:onClick="increaseScore"/>
        <ImageView
                android:layout_width="130dp"
                android:layout_height="100dp" app:srcCompat="@drawable/mickey" app:layout_row="1"
                app:layout_column="0" android:id="@+id/imageView3" android:onClick="increaseScore"/>
        <ImageView
                android:layout_width="130dp"
                android:layout_height="100dp" app:srcCompat="@drawable/mickey" app:layout_row="1"
                app:layout_column="1" android:id="@+id/imageView4" android:onClick="increaseScore"/>
        <ImageView
                android:layout_width="130dp"
                android:layout_height="100dp" app:srcCompat="@drawable/mickey" app:layout_row="1"
                app:layout_column="2" android:id="@+id/imageView5" android:onClick="increaseScore"/>
        <ImageView
                android:layout_width="130dp"
                android:layout_height="100dp" app:srcCompat="@drawable/mickey" app:layout_row="2"
                app:layout_column="0" android:id="@+id/imageView6" android:onClick="increaseScore"/>
        <ImageView
                android:layout_width="130dp"
                android:layout_height="100dp" app:srcCompat="@drawable/mickey" app:layout_row="2"
                app:layout_column="1" android:id="@+id/imageView7" android:onClick="increaseScore"/>
        <ImageView
                android:layout_width="137dp"
                android:layout_height="101dp" app:srcCompat="@drawable/mickey" app:layout_row="2"
                app:layout_column="2" android:id="@+id/imageView8" android:onClick="increaseScore"/>
    </android.support.v7.widget.GridLayout>
    <TextView
            android:text="Time: 10"
            android:layout_width="147dp"
            android:layout_height="46dp"
            android:id="@+id/timeText" android:textSize="30sp"
            android:textAlignment="center" android:gravity="center" android:layout_marginTop="68dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="116dp"/>
    <TextView
            android:text="Score: 0"
            android:layout_width="144dp"
            android:layout_height="54dp"
            android:id="@+id/scoreText" android:textSize="30sp"
            android:textAlignment="center" android:gravity="center"
            android:layout_marginBottom="28dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="132dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.007"/>
</android.support.constraint.ConstraintLayout>